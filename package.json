{
    "name": "hass-taste-test",
    "version": "0.0.12",
    "description": "Integration testing for Home Assistant cards",
    "main": "lib/index.js",
    "scripts": {
        "test": "jest && ava",
        "prepare": "husky install"
    },
    "bin": {
        "hass-taste-test": "lib/bin.js"
    },
    "author": "rianadon",
    "homepage": "https://github.com/rianadon/hass-taste-test#readme",
    "license": "AGPL-3.0-or-later",
    "dependencies": {
        "home-assistant-js-websocket": "^5.11.1",
        "node-fetch": "^2.6.1",
        "proper-lockfile": "^4.1.2"
    },
    "devDependencies": {
        "@types/jest": "^27.0.2",
        "@types/jest-image-snapshot": "^4.3.1",
        "@types/node-fetch": "^2.5.10",
        "@types/proper-lockfile": "^4.1.2",
        "@types/ws": "^8.2.0",
        "ava": "^3.15.0",
        "husky": "^7.0.2",
        "jest": "^27.2.5",
        "jest-image-snapshot": "^4.5.1",
        "lint-staged": "^11.2.3",
        "playwright": "^1.15.2",
        "prettier": "^2.4.1",
        "ts-jest": "^27.0.5",
        "ts-node": "^10.2.1",
        "typescript": "^4.4.3"
    },
    "prettier": {
        "printWidth": 100,
        "tabWidth": 4,
        "semi": false,
        "singleQuote": true
    },
    "ava": {
        "files": [
            "test/**/*.ava.ts"
        ],
        "extensions": [
            "ts"
        ],
        "require": [
            "ts-node/register"
        ]
    },
    "jest": {
        "rootDir": "test",
        "preset": "ts-jest",
        "testEnvironment": "node",
        "testMatch": [
            "**/*.jest.ts"
        ]
    },
    "lint-staged": {
        "*.{ts,js,json,css,md}": "prettier --write"
    }
}
