{
    "name": "hass-taste-test",
    "version": "0.2.1",
    "description": "Integration testing for Home Assistant cards",
    "main": "lib/index.js",
    "scripts": {
        "test": "jest && ava",
        "prepare": "husky install",
        "prepublishOnly": "tsc"
    },
    "bin": {
        "hass-taste-test": "lib/bin.js"
    },
    "author": "rianadon",
    "homepage": "https://github.com/rianadon/hass-taste-test#readme",
    "license": "AGPL-3.0-or-later",
    "dependencies": {
        "home-assistant-js-websocket": "^8.0.1",
        "node-fetch": "^2.6.1",
        "proper-lockfile": "^4.1.2",
        "ws": "^8.11.0"
    },
    "devDependencies": {
        "@types/jest": "^29.2.4",
        "@types/jest-image-snapshot": "^6.1.0",
        "@types/node-fetch": "^2.6.2",
        "@types/proper-lockfile": "^4.1.2",
        "@types/ws": "^8.5.3",
        "ava": "^5.1.0",
        "husky": "^8.0.2",
        "jest": "^29.3.1",
        "jest-image-snapshot": "^6.1.0",
        "lint-staged": "^13.1.0",
        "playwright": "^1.29.0",
        "prettier": "^2.8.1",
        "ts-jest": "^29.0.3",
        "ts-node": "^10.9.1",
        "typescript": "^4.9.4"
    },
    "prettier": {
        "printWidth": 100,
        "tabWidth": 4,
        "semi": false,
        "singleQuote": true
    },
    "ava": {
        "files": [
            "test/**/*.ava.ts"
        ],
        "extensions": [
            "ts"
        ],
        "require": [
            "ts-node/register"
        ]
    },
    "jest": {
        "rootDir": "test",
        "preset": "ts-jest",
        "testEnvironment": "node",
        "testMatch": [
            "**/*.jest.ts"
        ]
    },
    "lint-staged": {
        "*.{ts,js,json,css,md}": "prettier --write"
    }
}
